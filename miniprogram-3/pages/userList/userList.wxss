
.search-container {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5;
}

.search-input {
  flex: 1;
  height: 60rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  background-color: #fff;
}

.search-btn, .reset-btn {
  margin-left: 20rpx;
  padding: 10rpx 20rpx;
  background-color: #1aad19;
  color: white;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.reset-btn {
  background-color: #e64340;
}

.empty-list {
  text-align: center;
  padding: 40rpx;
  color: #999;
}