.container {
  padding: 20px;
}

.header {
  display: flex;
  justify-content: center;
  margin-bottom: 20px;
}

.title {
  font-size: 18px;
  font-weight: bold;
}

.user-list {
  margin-bottom: 20px;
}

.user-item {
  display: flex;
  justify-content: space-between;
  padding: 15px;
  margin-bottom: 10px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.user-info {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
}

.phone {
  color: #666;
  font-size: 14px;
}

.user-meta {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.status {
  margin-top: 5px;
  padding: 2px 8px;
  border-radius: 4px;
  font-size: 12px;
}

.active {
  background-color: #e6f7ff;
  color: #1890ff;
}

.inactive {
  background-color: #fff2f0;
  color: #ff4d4f;
}

.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 15px 0;
}

.pagination button {
  min-width: 90px;
  padding: 8px 15px;
  margin: 0 10px;
  background-color: #1677ff;
  color: white;
  border-radius: 6px;
  font-size: 14px;
}

.pagination button[disabled] {
  background-color: #f5f5f5;
  color: #bfbfbf;
}

.page-info {
  display: flex;
  align-items: center;
  font-size: 14px;
}

.page-info input {
  width: 40px;
  height: 30px;
  margin: 0 5px;
  text-align: center;
  border: 1px solid #d9d9d9;
  border-radius: 4px;
}