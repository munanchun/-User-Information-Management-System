/* pages/login/login.wxss */
.login-container {
  display: flex;
  justify-content: center;
  padding-top: 200rpx;
  background-color: #f5f5f5;
  height: 100vh;
}

.login-form {
  width: 680rpx;
  background-color: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.form-title {
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
  color: #1aad19;
}

.form-item {
  margin-bottom: 40rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #1aad19;
  color: white;
  border-radius: 10rpx;
  font-size: 36rpx;
  margin-top: 20rpx;
}

.login-btn[disabled] {
  background-color: #e0e0e0;
  color: #999;
}

.error-message {
  color: #e64340;
  text-align: center;
  margin-top: 30rpx;
  font-size: 28rpx;
}